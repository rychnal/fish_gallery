@model IEnumerable<fish_gallery.Models.Gallery>

@{
    ViewBag.Title = "GALLERY List";
}

<h2>Gallery List</h2>

<p>
@if (Session["username"] != null && Session["user_id_gallery"] != null && Session["user_id"].ToString() == Session["user_id_gallery"].ToString())
{
        @Html.ActionLink("Create New", "Create")
}
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
        <th>@Html.DisplayNameFor(model => model.Url)</th>
        @if (Session["username"] != null && Session["user_id"].ToString() == Model.ToList()[0].UserId.ToString())
        {
            <th>@Html.DisplayNameFor(model => model.Password)</th>
        }
        <th></th>
    </tr>
@if (Model != null)
{ 
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            @if (Session["username"] != null && Session["user_id"].ToString() == item.UserId.ToString())
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
            }
            <td>
                @if (Session["username"] != null && Session["user_id"].ToString() == item.UserId.ToString())
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span>|</span>
                }
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @if (Session["username"] != null && Session["user_id"].ToString() == item.UserId.ToString()) { 
                      @Html.ActionLink("Delete", "Delete", new { id = item.Id }) <span>|</span>
                }
              
            </td>
        </tr>
    }
}
</table>
