@model IEnumerable<fish_gallery.Models.Image>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (Session["username"] != null && Session["user_id_gallery"] != null && Session["user_id"].ToString() == Session["user_id_gallery"].ToString())
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        <td>
           
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @if (Session["username"] != null && Session["user_id"].ToString() == item.ImageUser.Id.ToString())
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
